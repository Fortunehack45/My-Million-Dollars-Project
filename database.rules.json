{
  "rules": {
    ".read": false,
    ".write": false,
    "status": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['state', 'last_changed', 'uid'])",
        "state": {
          ".validate": "newData.val() === 'online' || newData.val() === 'offline'"
        },
        "last_changed": {
          ".validate": "newData.isNumber() || newData.val() === 'SERVER_TIMESTAMP'"
        },
        "uid": {
          ".validate": "newData.val() === $uid"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "presence": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.isBoolean() || newData.isNumber()"
      }
    },
    "online_users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.isBoolean() || newData.isNumber()"
      }
    }
  }
}