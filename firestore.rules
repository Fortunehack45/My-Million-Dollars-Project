rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---

    // Check if user is signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the user accessing the document is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check if the user is an admin (Hardcoded Email or Role-based)
    // Note: In production, Custom Claims via Firebase Auth is recommended for roles.
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email.lower() == "fortunedomination@gmail.com" ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin")
      );
    }

    // --- COLLECTION RULES ---

    // Users Collection
    // Public Read: Required for Leaderboard and Network Stats
    // Write: Owner can update their own data (mining), Admin can manage all.
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Usernames Collection (For uniqueness checks)
    // Public Read: To check availability
    // Create: Any auth user can claim if not exists
    match /usernames/{username} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Tasks Collection
    // Public Read: To display tasks
    // Write: Admin only
    match /tasks/{taskId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Site Content (CMS)
    // Public Read: For Landing pages etc.
    // Write: Admin only
    match /site_content/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Global Stats
    // Public Read: Dashboard metrics
    // Update: Authenticated users (for incrementing global counters via client)
    // In a strict environment, this would be handled via Cloud Functions.
    match /global_stats/{statId} {
      allow read: if true;
      allow update: if isAuthenticated();
      allow create, delete: if isAdmin();
    }

    // Contact Messages
    // Create: Allowed for anyone (contact form)
    // Read, Update, Delete: Admin only
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}