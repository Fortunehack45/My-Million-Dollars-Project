rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    // Added safety checks for missing email and non-existent user docs to prevent "Permission Denied" errors due to evaluation crashes
    function isAdmin() {
      return request.auth != null && (
        (request.auth.token.email != null && request.auth.token.email.lower() == "fortunedomination@gmail.com") ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin")
      );
    }
    
    // Helper to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if true; // Leaderboard needs public read
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Usernames Collection (for uniqueness check)
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null; // Anyone auth'd can claim a name if available
    }

    // Tasks Collection
    match /tasks/{taskId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Site Content (CMS) Collection
    match /site_content/{docId} {
      allow read: if true; // Public read for landing page
      allow write: if isAdmin(); // Only admin can edit
    }
    
    // Global Stats
    match /global_stats/{statId} {
      allow read: if true;
      allow write: if request.auth != null; // Users update stats via triggers/client logic (can be tightened with cloud functions)
    }
  }
}